use alienfile;

plugin 'PkgConfig' => 'lzo2';

share {

  plugin Download => (
    url     => 'http://www.oberhumer.com/opensource/lzo/download/',
    version => qr/^lzo-([0-9\.]+)\.tar\.gz$/,
  );

  plugin Extract => 'tar.gz';

  requires 'Path::Tiny' => '0.077';

  patch sub {
    my($build) = @_;
    my $pc = Path::Tiny->new('lzo2.pc.in');
    if(-f $pc)
    {
      $pc->edit_lines(sub {
        /^Cflags:/ && s{/lzo$}{};
      });
    }
  };

  plugin 'Build::Autoconf' => ();

};
